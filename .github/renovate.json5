{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended",
    ],
    "rebaseWhen": "conflicted",
    "labels": ["dependencies", "renovate"],
    "automerge": true,
    "automergeStrategy": "squash",
    "postUpdateOptions": [
        "gomodTidy",
        "gomodUpdateImportPaths",
    ],
    "customManagers": [
        // backstage entity validator version in Dockerfile
        {
            "customType": "regex",
            "managerFilePatterns": ["/^internal/devtool/catalog-info.go$/"],
            "matchStrings": [
                "const\\s+validateEntityVersion\\s*=\\s*(?<currentValue>[0-9.]+)"
            ],
            "datasourceTemplate": "npm",
            "depNameTemplate": "@roadiehq/backstage-entity-validator",
            "versioningTemplate": "semver",
        }
    ]
}
