{
    "baseBranchPatterns": ["main"],
    "rebaseWhen": "conflicted",
    "labels": ["dependencies", "renovate"],
    "automerge": true,
    "automergeStrategy": "squash",
    "enabledManagers": ["tflint-plugin", "custom.regex"],
    "customManagers": [
        // policy-bot version in Dockerfile
        {
            "customType": "regex",
            "managerFilePatterns": ["/^internal/targets/policybot/tools.Dockerfile$/"],
            "matchStrings": [
                "ENV\\s+POLICYBOT_VERSION\\s*=\\s*(?<currentValue>[0-9.]+)"
            ],
            "datasourceTemplate": "github-releases",
            "depNameTemplate": "palantir/policy-bot",
        },
        // backstage entity validator version in Dockerfile
        {
            "customType": "regex",
            "managerFilePatterns": ["/^internal/targets/cataloginfo/tools.Dockerfile$/"],
            "matchStrings": [
                "ENV\\s+BACKSTAGE_ENTITY_VALIDATOR_VERSION\\s*=\\s*(?<currentValue>[0-9.]+)"
            ],
            "datasourceTemplate": "npm",
            "depNameTemplate": "@roadiehq/backstage-entity-validator",
            "versioningTemplate": "semver",
        },
    ]
}
